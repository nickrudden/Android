<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <!--    BUTTON PRESSED FALSE-->
  <item android:state_pressed="false">
    <layer-list>
      
      
      <item android:right="5dp" android:top="5dp">
        <shape>
          <corners android:radius="2dp"></corners>
        
        </shape>
      </item>

      <item android:bottom="2dp" android:left="2dp">
        <shape>
          <corners android:radius="4dp"></corners>
          
          <gradient android:angle="270" android:endColor="#9bc2cf" android:startColor="#add8e6"/>
          <padding android:bottom="10dp" android:right="10dp" android:top="10dp" android:left="10dp"></padding>
        </shape>
      </item>


    </layer-list>
  </item>


  <!--    BUTTON PRESSED TRUE-->
  <item android:state_pressed="true">
    <layer-list>

      <item android:right="5dp" android:top="5dp">
        <shape>
          <corners android:radius="2dp"></corners>
          <solid android:color="#d6d6d6"></solid>
        </shape>
      </item>

      <item android:bottom="2dp" android:left="2dp">
        <shape>
          <corners android:radius="4dp"></corners>
          <stroke android:width="1dp" android:color="#bababa"></stroke>
          <gradient android:angle="270" android:endColor="#b5dbe8" android:startColor="#9bc2cf"/>
          <padding android:bottom="10dp" android:right="10dp" android:top="10dp" android:left="10dp"></padding>
        </shape>
      </item>


    </layer-list>
  </item>

</selector>
